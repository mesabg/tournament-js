{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ],
    "paths":{
      //-- environments
      "@environment":["./environments/environment"],

      //-- @ms
      "@ms/api":["./@ms/api"],
      "@ms/components":["./@ms/components"],

      //-- tournament-js
      "@tournament/api":["./app/@api"],
      "@tournament/model":["./app/@api/@model"],
      "@tournament/response":["./app/@api/@response"],
      "@tournament/guards":["./app/@guards"],
      "@tournament/main-pages":["./app/@main-pages"],
      "@tournament/services":["./app/@services"],
      "@tournament/components":["./app/@components"]
    }
  }
}
